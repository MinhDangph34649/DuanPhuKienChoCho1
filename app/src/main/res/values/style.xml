<resources>
    <!-- Các phong cách khác của bạn -->
    <style name="sign_up">
        <item name="android:textSize">34sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">#4E352F</item>
    </style>

    <style name="user_name">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">#4E352F</item>
    </style>

    <style name="bottom_style">
        <item name="android:background">@color/vang_dam</item>
    </style>

    <!-- Thêm chủ đề mới cho ứng dụng -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Tùy chỉnh chủ đề của bạn ở đây -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
